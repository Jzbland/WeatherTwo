<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    tools:context="com.beestar.jzb.goglebleweather.ui.register.RememberPwd">
    <com.zhy.android.percent.support.PercentLinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/colorActionbar"
        app:layout_heightPercent="8%h"
        app:layout_widthPercent="100%w"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_widthPercent="15%w"
            android:layout_gravity="center"
            android:src="@drawable/back"
            android:id="@+id/back"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:layout_widthPercent="70%w"
            android:text="忘记密码"
            android:gravity="center"
            />
    </com.zhy.android.percent.support.PercentLinearLayout>

    <com.zhy.android.percent.support.PercentLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_heightPercent="92%h"
        android:background="#ffffff"
        android:orientation="vertical"
        >
        <EditText
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/edit_text3"
            android:layout_marginTop="50dp"
            android:hint="请输入您的手机号码"
            android:id="@+id/remenber_tel"
            android:paddingLeft="25dp"
            android:textColor="@android:color/black"
            android:textColorHint="#898989"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/edit_text3"
            android:layout_marginTop="20dp"
            android:textColor="@android:color/black"
            android:hint="请输入新密码"
            android:paddingLeft="25dp"
            android:inputType="textPassword"
            android:id="@+id/remember_new_pwd"
            android:textColorHint="#898989"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/edit_text3"
            android:layout_marginTop="20dp"
            android:textColor="@android:color/black"
            android:hint="再次输入新密码"
            android:paddingLeft="25dp"
            android:inputType="textPassword"
            android:id="@+id/remember_confim_pwd"
            android:textColorHint="#898989"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/edit_text3"
                android:layout_marginTop="20dp"
                android:textColor="@android:color/black"
                android:hint="验证码"
                android:paddingLeft="25dp"
                android:id="@+id/remember_sms_code"
                android:textColorHint="#898989"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="获取验证码"
                android:id="@+id/get_sms_code_remember"
                android:layout_alignBaseline="@id/remember_sms_code"
                android:layout_marginRight="40dp"
                android:background="@null"
                android:textColor="#007aff"
                />
        </RelativeLayout>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="50dp"
            android:background="@android:color/holo_blue_dark"
            android:text="重置密码"
            android:id="@+id/remember_button"
            />
    </com.zhy.android.percent.support.PercentLinearLayout>

</com.zhy.android.percent.support.PercentLinearLayout>
