<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.beestar.jzb.goglebleweather.ui.Main2Activity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/title_main"
        android:background="@color/colorActionbar">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/homesetting_sel"
            android:onClick="ShowSlidingMenu"
            android:layout_alignParentLeft="true"
            android:layout_margin="5dp"
            android:clickable="true"
            android:id="@+id/imageView" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="随身气象站"
            android:layout_toLeftOf="@+id/imageView"
            android:gravity="center"
            android:layout_toEndOf="@+id/imageView"
            android:layout_toStartOf="@+id/imageView2" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:clickable="true"
            android:layout_alignParentRight="true"
            android:layout_margin="5dp"
            android:src="@drawable/homeedit_sel"
            android:id="@+id/imageView2" />
    </RelativeLayout>
<!--=========================================================================-->

        <ScrollView
            android:id="@+id/scrollView_my"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <RelativeLayout
                        android:id="@+id/main_contont_all"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/colorActionbar">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:alpha="0.45"
                            android:id="@+id/imageView_bac1"
                            android:scaleType="fitXY"
                            android:src="@mipmap/homedefaultbg"
                            />

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="fitXY"
                            android:id="@+id/imageView_bac2"
                            android:src="@mipmap/homebgcover" />
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:id="@+id/main_all_con"
                                android:orientation="vertical"
                                >



                            </LinearLayout>
                    </RelativeLayout>
                </LinearLayout>
        </ScrollView>

</LinearLayout>
